@model IEnumerable<MyClass.Model.Categories>
@{
    ViewBag.Title = "DANH MỤC LOẠI HÀNG ĐÃ XÓA";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <link rel="stylesheet" href="./../../Public/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />


}
@section footer{
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script src="./../../Public/js/jquery.dataTables.min.css"></script>
    <script>let table = new DataTable('#myTable');</script>
}
<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    @*<h3 class="card-title">Title</h3>*@
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">THÙNG RÁC LOẠI SẢN PHẨM</strong>
                        </div>

                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Index", "Category")" class="btn-sm btn-primary"><i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>

                        </div>
                    </div>

                </div>
                <div class="card-body">


                    @*dòng hiển thị thông báo  (thêm tên file Message) file Message bây giờ là 1 phần của Index=>Index lấy message trả về từ CategoryController thì cũng là Message lấy message*@
                    @Html.Partial("Message")


                    <table class="table table-bordered table-striped" , id="myTable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Slug)</th>
                                <th>@Html.DisplayNameFor(model => model.ParentID)</th>
                                <th>@Html.DisplayNameFor(model => model.Order)</th>
                                <th>@Html.DisplayNameFor(model => model.MetaDes)</th>
                                <th>@Html.DisplayNameFor(model => model.MetaKey)</th>

                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Slug)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ParentID)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Order)</td>
                                    <th>@Html.DisplayFor(modelItem => item.MetaDes)</th>
                                    <th>@Html.DisplayFor(modelItem => item.MetaKey)</th>
                                    <td>
                                        <a href="@Url.Action("Undo","Category", new { id = item.Id })" class="btn-sm btn-success"><i class="fa fa-undo"></i></a>
                                        <a href="@Url.Action("Delete","Category", new { id = item.Id })" class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id , thay Id bằng Name cũng được}) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->
