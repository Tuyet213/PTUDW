@model IEnumerable<MyClass.Model.Suppliers>


@{
    ViewBag.Title = "THÙNG RÁC NHÀ CUNG CÂP";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    ViewBag.Title = "Trang chủ nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <link rel="stylesheet" href="./../../Public/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />


}
@section footer{
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script src="./../../Public/js/jquery.dataTables.min.css"></script>
    <script>let table = new DataTable('#myTable');</script>
}
<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    @*<h3 class="card-title">Title</h3>*@
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">THÙNG RÁC NHÀ CUNG CẤP</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Index", "Supplier")" class="btn-sm btn-primary"><i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>

                        </div>
                    </div>

                </div>
                <div class="card-body">
                    @*dòng hiển thị thông báo  (thêm tên file Message) file Message bây giờ là 1 phần của Index=>Index lấy message trả về từ CategoryController thì cũng là Message lấy message*@
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped" , id="myTable">
                        <thead>
                            <tr>

                                <th>#</th>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Image)</th>
                                <th>@Html.DisplayNameFor(model => model.Slug)</th>
                                <th>@Html.DisplayNameFor(model => model.Order)</th>*
                                @*<th>@Html.DisplayNameFor(model => model.Fullname)</th>*@
                                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                @*<th>@Html.DisplayNameFor(model => model.Url)</th>
                                    <th>@Html.DisplayNameFor(model => model.MetaDesc)</th>
                                    <th>@Html.DisplayNameFor(model => model.MetaKey)</th>*@

                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><input type="checkbox" name="id" value="" /></td>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td><img src="~/Public/img/supplier/@item.Image" class="img-fluid" /></td>
                                    @*<th>@Html.DisplayFor(modelItem => item.Image)</th>*@
                                    <th>@Html.DisplayFor(modelItem => item.Slug)</th>
                                    <th>@Html.DisplayFor(modelItem => item.Order)</th>
                                    @*<th>@Html.DisplayFor(modelItem => item.Fullname)</th>*@
                                    <th>@Html.DisplayFor(modelItem => item.Phone)</th>
                                    <th>@Html.DisplayFor(modelItem => item.Email)</th>
                                    @*<th>@Html.DisplayFor(modelItem => item.Url)</th>
                                        <th>@Html.DisplayFor(modelItem => item.MetaDesc)</th>
                                        <th>@Html.DisplayFor(modelItem => item.MetaKey)</th>
                                        <td>@Html.DisplayFor(modelItem => item.Order)</td>*@
                                    <td>
                                        @if (item.Status == 1)
                                        {
                                            <a href="@Url.Action("Status","Supplier", new { id = item.Id })" class="btn-sm btn-success"><i class="fa fa-toggle-on"></i></a>

                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Status","Supplier", new { id = item.Id })" class="btn-sm btn-danger"><i class="fa fa-toggle-off"></i></a>

                                        }
                                        
                                        <a href="@Url.Action("Undo","Supplier", new { id = item.Id })" class="btn-sm btn-info"><i class="fa fa-undo"></i></a>
                                        <a href="@Url.Action("Delete","Supplier", new { id = item.Id })" class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>

                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->
