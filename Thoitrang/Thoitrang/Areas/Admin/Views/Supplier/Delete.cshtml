@model MyClass.Model.Suppliers

@{
    ViewBag.Title = "Xóa mẫu tin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <!-- Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        @*<h3 class="card-title">Title</h3>*@
                        <div class="row">
                            <div class="col-md-6">
                                <strong class="text-danger">XÓA MẪU TIN</strong>
                            </div>

                            <div class="col-md-6 text-right">
                                @*<a href="@Url.Action("Edit", "Supplier", new { id = Model.Id })" class="btn-sm btn-success"><i class="fa fa-edit"></i> Sửa</a>*@
                                <a href="@Url.Action("Index", "Supplier")" class="btn-sm btn-primary"><i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>

                            </div>
                        </div>

                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-striped" , id="myTable">
                            <thead>
                                <tr>

                                    <th>#</th>
                                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Image)</th>
                                    <th>@Html.DisplayNameFor(model => model.Slug)</th>
                                    <th>@Html.DisplayNameFor(model => model.Order)</th>*
                                    <th>@Html.DisplayNameFor(model => model.Fullname)</th>
                                    <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                                    @*<th>@Html.DisplayNameFor(model => model.Url)</th>
                    <th>@Html.DisplayNameFor(model => model.MetaDesc)</th>
                    <th>@Html.DisplayNameFor(model => model.MetaKey)</th>*@

                                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td><input type="checkbox" name="id" value="" /></td>
                                    <td>@Html.DisplayFor(model => model.Id)</td>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                    <td><img src="~/Public/img/supplier/@Model.Image" class="img-fluid" /></td>
                                    @*<th>@Html.DisplayFor(modelItem => item.Image)</th>*@
                                    <td>@Html.DisplayFor(model => model.Slug)</td>
                                    <td>@Html.DisplayFor(model => model.Order)</td>
                                    <th>@Html.DisplayFor(model => model.Fullname)</th>
                                    <td>@Html.DisplayFor(model => model.Phone)</td>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                    @*<th>@Html.DisplayFor(modelItem => item.Url)</th>
                    <th>@Html.DisplayFor(modelItem => item.MetaDesc)</th>
                    <th>@Html.DisplayFor(modelItem => item.MetaKey)</th>
                    <td>@Html.DisplayFor(modelItem => item.Order)</td>*@
                                    <td>@Html.DisplayFor(model => model.Status)</td>
                                </tr>

                            </tbody>

                        </table>
                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    </div> <!-- /.card-footer-->
                </div><!-- /.card -->
            </section><!-- /.content -->
        </div> <!-- /.content-wrapper -->
    </div><!-- ./wrapper -->

}